<h1>Sign up</h1>
    
<%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
 <form>
  <div class="form-group">
    <label for="user_name" class="col-sm-2 control-label">ユーザー名</label>
    <div class="col-sm-6">
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
  </div>
  
  <div class="form-group">
    <label for="user_email" class="col-sm-2 control-label">email</label>
    <div class="col-sm-6">
        <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
  </div>
  
  <div class="form-group">
    <label for="user_password" class="col-sm-2 control-label">password</label>
    <div class="col-sm-6">
        <%= f.text_field :password, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
  </div>
  
  <div class="form-group">
    <label for="user_password_confirmation" class="col-sm-2 control-label">password_confirmation</label>
    <div class="col-sm-6">
        <%= f.text_field :password_confirmation, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
  </div>
  
  <button type="submit" class="btn btn-large btn-primary">Create my account!</button>
 </form>
<% end %>
   