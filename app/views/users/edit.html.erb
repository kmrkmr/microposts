<h1>Edit</h1>

<%= form_for(@user, html: {class: "form-horizontal"}) do |f| %>
<form>
  <div class="form-group">
    <label for="user_name" class="col-sm-2 control-label">ユーザー名</label>
    <div class="col-sm-6">
        <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
  </div>
  
  <div class="form-group">
    <label for="user_email" class="col-sm-2 control-label">email</label>
    <div class="col-sm-6">
        <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
  </div>
  
  <div class="form-group">
    <label for="user_password" class="col-sm-2 control-label">password</label>
    <div class="col-sm-6">
        <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
  </div>
  
  <div class="form-group">
    <label for="user_password_confirmation" class="col-sm-2 control-label">password_confirmation</label>
    <div class="col-sm-6">
        <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
  </div>

  <div class="form-group">
    <label for="message_profile" class="col-sm-2 control-label">プロフィール</label>
    <div class="col-sm-6">
        <%= f.text_area :profile, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
  </div>

  <div class="form-group">
    <label for="user_area" class="col-sm-2 control-label">居住地域</label>
    <div class="col-sm-6">
        <%= f.text_field :area, class: "form-control" %>
    </div>
    <div class="col-sm-4"></div>
  </div>
  
  <button type="submit" class="btn btn-default">更新</button>
</form>
<% end %>